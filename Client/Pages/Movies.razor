@page "/movies"
@using MovieJournal.Client.Services.MovieService;
@inject IMovieService MovieService;
@inject NavigationManager NavigationManager;

<PageTitle>Movies</PageTitle>
<h3>Movies</h3>
<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Status</th>
      <th>Genre</th>
      <th>Year</th>
      <th>Stars</th>
      <th>Review</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var movie in MovieService.Movies)
        {
            <tr>
              <td>@movie.Id</td>
              <td>@movie.Title</td>
              <td>@movie.Status</td>
              <td>@movie.Genre</td>
              <td>@movie.Year</td>
              <td>@movie.Stars</td>
              <td>@movie.Review</td>
              <td><img src=@movie.Image><img /></td>
              <td>
                <button class="btn btn-primary" @onclick="() => ShowMovie(movie.Id)"><i class="oi oi-pencil"/></button>
              </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary" @onclick="CreateNewMovie">Create New Movie</button>

<style>
  img {
    display:block;
    max-width:45px;
    max-height:67px;
    width:auto;
    height:auto;
  }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        await MovieService.GetMovies();
    }

